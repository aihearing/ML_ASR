<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tts_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:text="Language"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_12sp" />

    <TextView
        android:id="@+id/tv_download_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tts_language"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/text_black"
        android:textSize="8sp" />

    <ImageView
        android:id="@+id/iv_delete_model"
        android:src="@mipmap/iv_delete_small_logo"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_download"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_download"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_width="12dp"
        android:layout_centerVertical="true"
        android:background="@drawable/download_state"
        android:layout_height="12dp"/>
</RelativeLayout>