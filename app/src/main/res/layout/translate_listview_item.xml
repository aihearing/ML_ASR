<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="36dp" >

    <ImageView
        android:id="@+id/download"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="6dp"
        android:padding="2dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/translate_download" />


    <ImageView
        android:id="@+id/delete_model"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="6dp"
        android:padding="2dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/download"
        app:srcCompat="@drawable/translate_delete_model" />

    <TextView
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="12sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/has_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@id/language"
        android:layout_toStartOf="@id/delete_model"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="10sp"
        android:text="TextView" />



</RelativeLayout>